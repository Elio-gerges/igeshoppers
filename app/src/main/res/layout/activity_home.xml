<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_bk_color"
    android:focusableInTouchMode="true"
    tools:context=".activities.HomeActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/header">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="Shoppers Logo"
                app:srcCompat="@drawable/favicon_300_1024x1024" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Shoppers"
                android:textSize="30sp" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="40dp"
            android:layout_centerHorizontal="true"
            android:shape="ring"
            android:innerRadius="0dp"
            android:thicknessRatio="1.9"
            android:elevation="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <ImageButton
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:id="@+id/btnProfile"
                android:src="@drawable/ic_person"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:elevation="10dp"
                android:clickable="true"
                android:background="@android:color/transparent">
            </ImageButton>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pager"
        android:layout_below="@id/header">

    </androidx.viewpager.widget.ViewPager>

    <com.gauravk.bubblenavigation.BubbleNavigationConstraintView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:elevation="8dp"
        android:padding="16dp"
        app:bnc_mode="spread"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rounded_rect_white">

        <com.gauravk.bubblenavigation.BubbleToggleView
            android:id="@+id/c_item_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bt_active="true"
            app:bt_colorActive="@color/register_bk_color"
            app:bt_colorInactive="#808080"
            app:bt_icon="@drawable/ic_home"
            app:bt_shape="@drawable/transition_background_drawable_default"
            app:bt_title="Home"
            app:bt_padding="10dp"
            app:bt_titlePadding="10dp" />

        <com.gauravk.bubblenavigation.BubbleToggleView
            android:id="@+id/c_item_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bt_colorActive="@color/register_bk_color"
            app:bt_colorInactive="#808080"
            app:bt_icon="@drawable/ic_cart"
            app:bt_shape="@drawable/transition_background_drawable_default"
            app:bt_title="Cart"
            app:bt_padding="10dp"
            app:bt_titlePadding="10dp" />

        <com.gauravk.bubblenavigation.BubbleToggleView
            android:id="@+id/c_item_orders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bt_colorActive="@color/register_bk_color"
            app:bt_colorInactive="#808080"
            app:bt_icon="@drawable/ic_checklist"
            app:bt_shape="@drawable/transition_background_drawable_default"
            app:bt_title="Orders"
            app:bt_padding="10dp"
            app:bt_titlePadding="10dp" />

        <com.gauravk.bubblenavigation.BubbleToggleView
            android:id="@+id/c_item_wishlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bt_colorActive="@color/register_bk_color"
            app:bt_colorInactive="#808080"
            app:bt_icon="@drawable/ic_wishlist"
            app:bt_shape="@drawable/transition_background_drawable_default"
            app:bt_title="Wish List"
            app:bt_padding="10dp"
            app:bt_titlePadding="10dp" />
    </com.gauravk.bubblenavigation.BubbleNavigationConstraintView>

